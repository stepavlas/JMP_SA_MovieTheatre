<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="userDao" class="com.stepavlas.movieTheatre.impl.UserDaoImpl"/>
    <bean id="eventDao" class="com.stepavlas.movieTheatre.impl.EventDaoImpl"/>
    <bean id="showDao" class="com.stepavlas.movieTheatre.impl.ShowDaoImpl">
        <constructor-arg ref="eventDao"/>
    </bean>

</beans>